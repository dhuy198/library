<div class="max-w-3xl mx-auto p-6 bg-white rounded shadow-md mb-[50px]">
  <h1 class="text-3xl font-bold mb-6 text-gray-800">New Book</h1>
    <%= render 'form', book: @book %>
</div>

<% if @book.errors.any? %>
  <div class="mb-4 text-red-600">
    <h2 class="font-bold mb-2">Có lỗi xảy ra:</h2>
    <ul class="list-disc pl-5">
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>