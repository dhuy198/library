<h2 class="text-2xl font-bold mb-6 text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "max-w-md mx-auto bg-white p-6 rounded shadow-md" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :name, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-500 mb-1 block">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="mt-6">
    <%= f.submit "Sign up", class: "w-full bg-green-600 text-white py-2 rounded-lg hover:bg-green-700 transition duration-200" %>
  </div>
<% end %>

<div class="mt-4 text-center">
  <%= render "users/shared/links" %>
</div>
