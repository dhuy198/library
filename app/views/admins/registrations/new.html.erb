<h2 class="text-2xl font-semibold mb-6">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

  <div class="flex flex-col">
    <%= f.label :email, class: "mb-1 font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex flex-col">
    <%= f.label :password, class: "mb-1 font-medium text-gray-700" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-500 mb-1">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex flex-col">
    <%= f.label :password_confirmation, class: "mb-1 font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.submit "Sign up", class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 transition" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
